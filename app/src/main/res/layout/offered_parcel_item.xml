<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_id_offer"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="ID"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/text_view_name_offer"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_id_offer"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:text="Customer id"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/address_offer"
            android:layout_width="263dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="116dp"
            android:text="Address" />

        <EditText
            android:id="@+id/message_offer"
            android:layout_width="263dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="129dp"
            android:layout_marginBottom="38dp"
            android:hint="Write message" />

        <Button
            android:id="@+id/button_send_offer"
            android:layout_width="101dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="290dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="45dp"
            android:text="Send" />

        <Spinner
            android:id="@+id/spinner_offer"
            android:layout_width="98dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="284dp"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="92dp" />

        <Button
            android:id="@+id/button_add_delivery_offer"
            android:layout_width="371dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:enabled="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="204dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="2dp"
            android:text="I want to take the Parcel" />

        <TextView
            android:id="@+id/text_view_details_offer"
            android:layout_width="102dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="285dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="132dp"
            android:text="Details" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
